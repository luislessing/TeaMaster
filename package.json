{
  "name": "teamaster",
  "version": "1.0.0",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron:build": "vite build && electron-builder build --linux"
  },
  "build": {
    "appId": "com.teamaster.app",
    "productName": "TeaMaster",
    "linux": {
      "target": ["AppImage"],
      "icon": "build/tea-14.png",
      "category": "Utility"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "output": "release"
    }
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "vite": "^5.0.0"
  }
}