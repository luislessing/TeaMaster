{
  "name": "teamaster",
  "private": true,
  "version": "1.0.0",
  "description": "Tea Rating Application",
  "author": "Luis Lessing",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "electron .",
    "electron:build": "vite build && electron-builder"
  },
  "build": {
    "appId": "com.teamaster.app",
    "files": [
      "dist/**/*",
      "electron/**/*"
